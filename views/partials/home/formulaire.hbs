<!-- formulaire de contact -->
<div class="container col-lg-10">
  <h1 class="text-center m-5">Contactez-nous</h1>
  <form class="row my-5" action="/contact" method="post">
    <!-- colonne de gauche -->
    <div class="col-md-6">
      <div class="row justify-content-flex-start">
        <div class="col-md-6">
          <label for="exampleFormControlInput1" class="form-label">Votre Pr√©nom</label>
          <input type="text" name="prenom" class="form-control shadow-lg" id="exampleFormControlInput1" placeholder="name">
        </div>
        <div class="mb-4 col-md-6">
          <label for="exampleFormControlInput1" class="form-label">Votre Nom</label>
          <input type="text" name="nom" class="form-control shadow-lg" id="exampleFormControlInput1" placeholder="name">
        </div>
      </div>
      <div class="mb-4  col-md-12 ">
        <label for="exampleFormControlInput1" class="form-label">Votre Email</label>
        <input type="email" name="email" class="form-control shadow-lg" id="exampleFormControlInput1" placeholder="name@example.com">
      </div>
      <div class="mb-4 col-md-12">
        <label for="exampleFormControlInput1" class="form-label">Sujet</label>
        <input type="text" name="sujet" class="form-control shadow-lg" id="exampleFormControlInput1" placeholder="sujet">
      </div>
      <div class="mb-3 col-md-12">
        <label for="exampleFormControlTextarea1" class="form-label">Message</label>
        <textarea class="form-control shadow-lg" name="message" id="exampleFormControlTextarea1" rows="3"></textarea>
      </div>
    </div>
    <!-- colonne de droite -->
    <div class="col-md-6">
      <div class="align-items-center h-100  mb-3">
        <div class="card h-50 shadow-lg">
          <div class="card-body d-flex justify-content-center align-items-center">
            <div>
              <h5 class="card-title text-center">Email</h5>
              <h6 class="card-subtitle m-auto text-center">Email@gmail.com</h6>
            </div>
          </div>
        </div>
        <div class="card h-50 mt-3 shadow-lg">
          <div class="card-body  d-flex justify-content-center align-items-center">
            <div>
              <h5 class="card-title text-center">Telephone</h5>
              <h6 class="card-subtitle m-auto  text-center">06 06 06 06 06</h6>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center my-5">
      <button type="submit" class="btn btn-outline-secondary shadow-lg">Valider</button>
    </div>
  </form>
</div>
<!-- fin du formulaire de contact -->